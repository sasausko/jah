<div class="bg-gray-200 p-4 mt-8">
  <h2 class="text-2xl font-semibold mb-4">Останні 5 статей</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
    <% @latest_articles.each do |article| %>
      <div class="border border-gray-300 p-4 rounded-lg">
        <h3 class="text-lg font-bold"><%= link_to article.title, article_path(article) %></h3>
        <p class="text-gray-600"><%= article.body.to_plain_text.truncate(200) %></p>
        <%= link_to 'Читати далі', article_path(article), class: "text-blue-500 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>
