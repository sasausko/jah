<h1>ArticlesCategories#show</h1>
<p>Find me in app/views/articles_categories/show.html.erb</p>

<h1><%= @category.name %></h1>

<% if @category.children.any? %>
  <h2>Підкатегорії</h2>
  <ul>
    <% @category.children.each do |sub_category| %>
      <li><%= link_to sub_category.name, articles_category_path(sub_category) %></li>
    <% end %>
  </ul>
<% end %>

<h2>Статті</h2>
<div class="articles-list">
  <% @articles.each do |article| %>
    <div class="article-item">
      <h2><%= link_to article.title, article_path(article) %></h2>
      <p><%= article.body.to_plain_text.truncate(100) %></p>
      <p><%= link_to 'Читати далі', article_path(article), class: 'btn btn-primary' %></p>
    </div>
  <% end %>
</div>

