<div class="container mx-auto px-4 py-6">
  <!-- Заголовок статті -->
  <h1 class="text-4xl font-bold text-green-700 mb-6">
    <%= @article.title %>
  </h1>

  <!-- Автор і дата публікації -->
  <div class="text-gray-500 text-sm mb-6">
    Опубліковано: <%= @article.created_at.strftime("%d %B %Y") %>
  </div>

  <!-- Тіло статті -->
  <div class="prose max-w-none text-gray-700 mb-8">
    <%= simple_format(@article.body) %>
  </div>

  <!-- Категорія статті -->
  <div class="text-gray-600 text-sm mb-6">
    Категорія: 
    <%= link_to @article.articles_category.name, articles_category_path(@article.articles_category), class: "text-green-500 hover:text-green-700 font-bold" %>
  </div>

  <!-- Посилання назад -->
  <div>
    <%= link_to '← Повернутися до списку статей', articles_path, class: "text-green-500 hover:text-green-700 font-bold" %>
  </div>
</div>

